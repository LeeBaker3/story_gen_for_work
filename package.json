{
    "name": "story_gen_for_work",
    "private": true,
    "type": "module",
    "scripts": {
        "setup:node": "bash scripts/bootstrap-node.sh",
        "pretest": "bash scripts/bootstrap-node.sh",
        "test:frontend": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --coverage",
        "test:frontend:ci": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --ci --reporters=default --reporters=jest-junit --coverage",
        "test:frontend:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
        "test:backend": "pytest -q",
        "test": "npm run test:frontend",
        "test:all": "npm run test:frontend && python -m pytest -q"
    },
    "devDependencies": {
        "@testing-library/dom": "^9.3.3",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/user-event": "^14.5.2",
        "jest-junit": "^16.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0"
    },
    "engines": {
        "node": ">=20 <23"
    }
}